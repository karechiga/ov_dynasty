<h1>Free Agents</h1>

<%= will_paginate @players %>
<div class="table-responsive-lg player-table">
  <table class="table table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th class="text-center" colspan="16">2018-2019 Season</th>
      </tr>
    </thead>
    <thead class="thead-light player-stats">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Position</th>
        <th scope="col">GP</th>
        <th scope="col">MPG</th>
        <th scope="col">PPG</th>
        <th scope="col">RPG</th>
        <th scope="col">APG</th>
        <th scope="col">SPG</th>
        <th scope="col">BPG</th>
        <th scope="col">TOPG</th>
        <th scope="col">FG%</th>
        <th scope="col">3Pt%</th>
        <th scope="col">FT%</th>
        <th scope="col">FPPG</th>
        <th scope="col">Salary</th>
      </tr>
    </thead>
    <tbody>
      <% row = 1 %>
      <% @players.each do |player|%>
        <tr id="<%= player.id %>">
          <th scope="row"><%= row %></th>
          <th scope="col"><button type="button" class="btn btn-primary btn-sm" 
            data-toggle="modal" data-target="#contractModal" data-contract-year-url="<%= league_admin_roster_player_contract_years_path(@league, @roster, player) %>">
            <%= player.name %></button>
          </th>
          <th scope="col"><%= player.position %></th>
          <th scope="col"><%= player.gp %></th>
          <th scope="col"><%= player.mpg %></th>
          <th scope="col"><%= player.ppg %></th>
          <th scope="col"><%= player.rpg %></th>
          <th scope="col"><%= player.apg %></th>
          <th scope="col"><%= player.spg %></th>
          <th scope="col"><%= player.bpg %></th>
          <th scope="col"><%= player.topg %></th>
          <th scope="col"><%= player.fg_perc %></th>
          <th scope="col"><%= player.fg3_perc %></th>
          <th scope="col"><%= player.ft_perc %></th>
          <th scope="col"><%= player.fppg %></th>
          <th scope="col"><%= player.current_salary %></th>
        </tr>
        <% row += 1%>
      <% end %>
    </tbody>
  </table>
</div>



